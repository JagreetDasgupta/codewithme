# Server Configuration
NODE_ENV=development
PORT=4000
APP_VERSION=1.0.0

# Frontend URL (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-min-32-characters
JWT_EXPIRES_IN=1d
JWT_COOKIE_EXPIRES_IN=1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=codewithme
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Sandbox Service
SANDBOX_URL=http://localhost:5000

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Logging
LOG_LEVEL=info

# Run migrations on startup (set to true to auto-run migrations)
RUN_MIGRATIONS=false

