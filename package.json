{
  "name": "codewithme",
  "version": "1.0.0",
  "description": "Remote Shared Coding Interview Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "sandbox"
  ],
  "scripts": {
    "start": "docker-compose up",
    "start:dev": "docker-compose up -d",
    "start:local": "concurrently \"npm run start:frontend\" \"npm run start:backend\" \"npm run start:sandbox\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "start:sandbox": "cd sandbox && npm start",
    "stop": "docker-compose down",
    "build": "docker-compose build",
    "build:all": "npm run build:frontend && npm run build:backend && npm run build:sandbox",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:sandbox": "cd sandbox && npm run build",
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:sandbox",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:sandbox": "cd sandbox && npm install",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "",
  "license": "MIT"
}
